{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@plugin/*": ["./src/plugin/*"],
      "@shared/*": ["./src/shared/*"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "references": [
    {"path": "./src/plugin"},
    {"path": "./src/shared"},
    {"path": "./src/ui"}
  ],
  "exclude": ["test"]
}
