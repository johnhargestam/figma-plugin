{
  "name": "bridge",
  "version": "1.0.0",
  "private": "true",
  "license": "UNLICENSED",
  "description": "Bridge Figma plugin",
  "main": "code.js",
  "scripts": {
    "build": "npm-run-all webpack pug",
    "build:dev": "npm-run-all webpack:dev pug",
    "build:watch": "npm-run-all webpack:dev --parallel webpack:watch pug:watch",
    "clean": "rimraf ./dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pug": "pug ./src/ui.pug -o ./dist",
    "pug:watch": "pug ./src/ui.pug -o ./dist -w",
    "webpack": "webpack",
    "webpack:dev": "webpack --mode=development",
    "webpack:watch": "webpack --mode=development --watch"
  },
  "author": "johnhargestam",
  "dependencies": {
    "@figma/plugin-typings": "^1.34.1",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "ts-loader": "^9.2.5",
    "webpack-cli": "^4.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0"
  }
}
